<p style="color: green"><%= notice %></p>

<h1>Tasks</h1>

<div id="reassign-button">
  <% if current_account.manager? || current_account.admin? %>
    <%= link_to "Reassign all incompleted tasks", reassign_tasks_tasks_path %>
  <% end %>
</div>

<div id="tasks">
  <% @tasks.each do |task| %>
    <%= render task %>
    <p>
      <%= link_to "Show this task", task %>
    </p>
  <% end %>
</div>

<%= link_to "New task", new_task_path %>

{
  "$schema": "http://json-schema.org/draft-04/schema#",

  "title": "Balances.SnapshotTaken.v1",
  "description": "json schema for BE balance change events (version 1)",

  "definitions": {
    "event_data": {
      "type": "object",
      "properties": {
        "account_public_id": {
          "type": "string"
        },
        "debit": {
          "type": "string"
        },
        "credit": {
          "type": "string"
        },
        "type": {
          "type": ["string", "null"]
        }
      },
      "required": [
        "account_public_id",
        "debit",
        "credit"
      ]
    }
  },

  "type": "object",

  "properties": {
    "event_id":      { "type": "string" },
    "event_version": { "enum": [1] },
    "event_name":    { "enum": ["BalanceChanged"] },
    "event_time":    { "type": "string" },
    "producer":      { "type": "string" },

    "data": { "$ref": "#/definitions/event_data" }
  },

  "required": [
    "event_id",
    "event_version",
    "event_name",
    "event_time",
    "producer",
    "data"
  ]
}

